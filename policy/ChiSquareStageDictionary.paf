#<?cfg paf dictionary ?>

target: lsst.coadd.pipeline.ChiSquareStage

definitions: {
    inputKeys: {
        description: "Names of input items on the clipboard."
        type: "policy"
        dictionary: {
            definitions: {
                event: {
                    type: "string"
                    description: "An event (dafBase.PropertySet). Required fields:
                        * isLastExposure a boolean. If True then the stage will add the exposure
                            to the coadd, output the coadd and reset itself.
                            The next exposure, if any, will start a new coadd."
                    minOccurs: 1
                    maxOccurs: 1
                    default: "coaddChiSquaredEvent"
                }        
                exposure: {
                    description: "Calibrated, background-subtracted exposure to add to the coadd (afwImage.Exposure<x>)."
                    type: "string"
                    minOccurs: 1
                    maxOccurs: 1
                    default: "backgroundSubtractedExposure"
                }        
            }
        }
        minOccurs: 1
        maxOccurs: 1
    }
    
    #output clipboard keys:
    outputKeys: {
        description: "Names if output items on the clipboard."
        type: "policy"
        dictionary: {
            definitions: {
                coadd: {
                    description: "Coadd exposure (afwImage.Exposure<x>)."
                    type: "string"
                    minOccurs: 1
                    maxOccurs: 1
                    default: "chiSquaredCoadd"
                }        
                backgroundKey: {
                    description: "Coadd weight map image (afwImage.ImageF)."
                    type: "string"
                    minOccurs: 1
                    maxOccurs: 1
                    default: "chiSquaredWeightMap"
                }
            }
        }
        maxOccurs: 1
    }
    
    coaddPolicy: {
        description: "Policy to control chi-squared coadd generation."
        type: "policy"
        dictionary: @ChiSquaredCoaddDictionary.paf
        minOccurs: 1
        maxOccurs: 1
    }
}
